primary-border = 2px solid 
primary-radius = 4px
primary-color = rgba(217, 30, 24, 0.8)

.container
    width: 100vw !important 

.leftbox
    height 85vh
    border-radius primary-radius

.stream-list-item
    height 80px
    width 100%
    border primary-border
    border-radius primary-radius
    & img 
        width 100%
        border-radius primary-radius
    & .col-md-4
        padding 0 !important 
        height 76px
   
.chatbox 
    width 100%
    height 200px
    border primary-border

.vertical-center
    height: 80px
    margin-top 50%
    margin-bottom 50%

.top-right 
    position absolute
    top: 0
    right: 2px

.bot-left
    position: absolute
    bottom: 0
    left: 2px
