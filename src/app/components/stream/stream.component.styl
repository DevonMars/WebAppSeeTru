primary-border = 2px solid 
primary-radius = 4px
primary-color = rgba(217, 30, 24, 0.8)

.container
    width: 100vw !important 

.leftbox
    height 85vh
    border-radius primary-radius

.stream-list-item
    height 128px
    width 100%
    border primary-border
    border-radius primary-radius
    & img 
        width 100%
        height 100%
    & .col-md-4
        padding 0 !important 
        height 124px
   
.chatbox 
    width 100%
    height 200px
    border primary-border
.vertical-center
    margin-top 50%
    margin-bottom 50%

div.alert {
    position:fixed; 
    top: 60px; 
    left: 0px; 
    width: 100%;
    z-index:9999; 
    border-radius:0px
}
