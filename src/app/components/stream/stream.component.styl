primary-border = 2px solid 
primary-radius = 4px
primary-color = rgba(217, 30, 24, 0.8)

.container
    width: 100vw !important 

.leftbox
    height 85vh
    border-radius primary-radius

.stream-list-item
    padding-top: 1px;
    background-color: #e6e6e6
    height 128px
    width 100%
    border primary-border
    border-radius primary-radius
    & img 
        width 99.5%
        height 99.5%
    & .col-md-4
        padding 0 !important 
        height 124px
   
.chatbox 
    width 100%
    height 200px
    border primary-border
.vertical-center
    margin-top 50%
    margin-bottom 50%

.scrollbar {
margin-left: 30px;
float: left;
height: 300px;
overflow-y: scroll;
margin-bottom: 25px;
}

.scrollbar-primary::-webkit-scrollbar {
width: 12px;
background-color: #971E1E; }

.scrollbar-primary::-webkit-scrollbar-thumb {
border-radius: 10px;
-webkit-box-shadow: inset 0 0 6px rgba(0, 0, 0, 0.1);
background-color: #0d0d0d; }

